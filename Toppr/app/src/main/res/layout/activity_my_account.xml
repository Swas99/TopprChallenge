<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-10dp"
    app:cardElevation="8dp">


    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="User id:"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvUserId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textSize="22sp"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:shadowColor="#000000"
                    android:layout_gravity="center"
                    android:background="@drawable/border_grey"
                    />

                <TextView
                    android:text="Password:"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tvPassword"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:textSize="22sp"
                        android:typeface="sans"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:shadowColor="#000000"
                        android:inputType="textPassword"
                        android:layout_gravity="center"
                        android:background="@drawable/border_grey"
                        />
                    <ImageButton
                        android:id="@+id/btn_edit_password"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_edit"/>
                </LinearLayout>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvPasswordMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#993223"
                    android:text="Password is not set"/>
                <View
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#27000000"
                    />

                <com.google.android.gms.common.SignInButton
                    android:visibility="invisible"
                    android:id="@+id/btnConnectGoogle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#27000000"
                    />

                <TextView
                    android:text="Name:"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:textSize="22sp"
                        android:typeface="sans"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:shadowColor="#000000"
                        android:layout_gravity="center"
                        android:background="@drawable/border_grey"
                        />
                    <ImageButton
                        android:id="@+id/btn_edit_name"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_edit"/>
                </LinearLayout>
                <TextView
                    android:text="Date of birth:"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tvDob"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:textSize="22sp"
                        android:typeface="sans"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:shadowColor="#000000"
                        android:layout_gravity="center"
                        android:background="@drawable/border_grey"
                        />
                    <ImageButton
                        android:id="@+id/btn_edit_dob"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_edit"/>
                </LinearLayout>
                <TextView
                    android:text="Country:"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tvCountry"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:textSize="22sp"
                        android:typeface="sans"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:shadowColor="#000000"
                        android:layout_gravity="center"
                        android:background="@drawable/border_grey"
                        />
                    <ImageButton
                        android:id="@+id/btn_edit_country"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_edit"/>
                </LinearLayout>
                <TextView
                    android:text="Phone:"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:textSize="22sp"
                        android:typeface="sans"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:shadowColor="#000000"
                        android:layout_gravity="center"
                        android:background="@drawable/border_grey"
                        />
                    <ImageButton
                        android:id="@+id/btn_edit_phone"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_edit"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_margin = "18dp"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:text="Save"
            android:background="@drawable/bg_blue_btn"/>

    </LinearLayout>

</android.support.v7.widget.CardView>