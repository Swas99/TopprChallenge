<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-12dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            >
            <View
                android:id="@+id/btnShare"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_margin="9dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_action_share"
                />
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">
                <ImageView
                    android:id="@+id/ivKing"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_got_3"/>
            </android.support.v7.widget.CardView>


        </RelativeLayout>


        <LinearLayout
            android:layout_margin="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:padding="9dp"
            android:background="@drawable/border_grey">

            <TextView
                android:id="@+id/tvKingName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center"
                android:text="Rob Stark"
                android:textColor="#666666"
                android:shadowColor="#666666"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textSize="20sp"  />
            <TextView
                android:id="@+id/tvRank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Rank: 1"
                android:textColor="#666666"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvBestRank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rating: 123"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#666666"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvWorstRank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rating: 123"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#666666"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rating: 123"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#666666"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvHighestRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rating: 123"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#666666"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvLowestRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rating: 123"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#666666"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvBattlesWon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rating: 123"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#666666"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvBattlesLost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rating: 123"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#666666"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvTotalBattles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rating: 123"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#666666"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvStrength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rating: 123"
                android:textColor="#666666"
                android:textSize="16sp"/>
            <!--private String topRank;-->
            <!--private String worstRank;-->
            <!--private String highestRating;-->
            <!--private String lowestRating;-->
            <!--private String battlesLost;-->

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>